# Environment variables for local Lambda development
# Copy this file to .env and update with your actual values

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Cognito Configuration
COGNITO_REGION=us-east-1
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_CLIENT_ID=your-client-id

# CLARISA Configuration
CLARISA_API_URL=https://api.clarisa.cgiar.org

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Lambda specific
LAMBDA_TASK_ROOT=/var/task
AWS_LAMBDA_FUNCTION_NAME=cgiar-auth-microservice-dev
AWS_LAMBDA_FUNCTION_VERSION=$LATEST

# Optional: JWT Configuration
JWT_SECRET=your-jwt-secret-for-development
JWT_EXPIRES_IN=24h
