{
  "name": "client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "serve:ssr:client": "node dist/client/server/server.mjs",
    "docker:build": "docker build -t text_mining_frontend .",
    "docker:run": "docker run --env-file ./.env -dti --name text_mining_frontend_dev -p 4200:4200 text_mining_frontend",
    "docker:stop": "docker stop text_mining_frontend_dev && docker rm text_mining_frontend_dev",
    "docker:logs": "docker logs text_mining_frontend_dev",
    "docker:exec": "docker exec -it text_mining_frontend_dev /bin/bash",
    "compose:up:dev": "docker-compose up dev -d",
    "compose:up:prod": "docker-compose up prod -d"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.0",
    "@angular/common": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/forms": "^17.1.0",
    "@angular/platform-browser": "^17.1.0",
    "@angular/platform-browser-dynamic": "^17.1.0",
    "@angular/platform-server": "^17.1.0",
    "@angular/router": "^17.1.0",
    "@angular/ssr": "^17.1.0",
    "@types/jest": "^29.5.12",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.0",
    "@angular/cli": "^17.1.0",
    "@angular/compiler-cli": "^17.1.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.18.0",
    "typescript": "~5.3.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup-jest.ts"
    ],
    "globalSetup": "jest-preset-angular/global-setup",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/app/**/*.ts",
      "./src/app/**/*.html",
      "!./src/app/**/*routing.ts",
      "!./src/app/**/*module.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
